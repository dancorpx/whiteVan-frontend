/* Card Component */
.card-outer-border {
  margin: 10px;
  border: 0.5px solid rgb(145, 145, 145);
  border-radius: 5px;
  padding-bottom: 5px;
}

.card-header-item {
  background-color: rgb(145, 145, 145);
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  padding: 5px;
  color: white;
  font-size: 14px;
  text-align: center;
}

.card-line {
  border-top: 0.5px solid rgb(145, 145, 145);
}

.card-body-item {
  padding: 20px;
  color: rgb(73, 73, 73);
  font-size: 16px;
}

.set-background-color {
  background-color: rgb(145, 145, 145)
}

.expanded-card-body-item {
  padding: 20px;
  color: white;
  background-color: rgb(73, 73, 73);
  border-radius: 5px
}


.left {
  float: left;
  }
.right {
  float: right;
}

