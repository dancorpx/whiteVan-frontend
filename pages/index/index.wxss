.whole-page {
  width: 100%;
  height: 100%;
  position: fixed;
  opacity: 1;
  z-index: 2;
  background-color:rgba(255, 255, 255, 0.788);
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.position {
  position: absolute;
  bottom: 1px;
  right: 1px;
}

.relative-position {
  position: relative;
}

