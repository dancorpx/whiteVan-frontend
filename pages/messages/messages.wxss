/* messages */
/* lighter chat container */
.lighter {
    border: 2px solid #dedede;
    background-color: #f1f1f1;
    border-radius: 5px;
    padding: 10px;
    margin: 10px 0;
}

/* Darker chat container */
.darker {
    border-color: #ccc;
    background-color: #ddd;
    border-radius: 5px;
    padding: 10px;
    margin: 10px 0;
}
/* avatar */
.avatar {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  float: left;
  margin-right: 20px;
}
/* Style time text */
.time {
    float: right;
    color: #aaa;
}
/* chat area */
.sent_message {
  width: 100%;
  margin-bottom: 35rpx;
  height: 30px;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: rgb(219, 216, 216);
  border: 2px solid #dedede;
  margin-top:8px;
  border-radius: 5px;
  padding-left: 10px;
}
   /* Button */
.submit-button {
  background-color: rgb(122, 128, 131);
  color: white;
  margin: 10px;
  width: 200px;
  margin-left: 60px;
}
/* input field */
.user-input {
  border-color: #ccc;
  background-color: #ddd;
  border-radius: 5px;
  height: 50px;
}
