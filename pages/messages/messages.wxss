/* messages */
/* lighter chat container */
.lighter {
    border: 2px solid #dedede;
    background-color: #f1f1f1;
    border-radius: 5px;
    padding: 10px;
    margin: 10px 0;
    
     
   
}

/* Darker chat container */
.darker {
    border-color: #ccc;
    background-color: #ddd;
    border-radius: 5px;
    padding: 10px;
    margin: 10px 0;
}
/* avatar */
.avatar {
  height: 50px;
  width: 50px;
  border-radius: 50%;
  float: left;
  margin-right: 20px;
}
/* Style time text */
.time {
    float: right;
    color: #aaa;
}
/* chat area */
.sent_message {
  width: 100%;
  margin-bottom: 35rpx;
  height: 30px;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: rgb(219, 216, 216);
  border: 2px solid #dedede;
  margin-top:8px;
  border-radius: 5px;
  padding-left: 10px;
}
   /* Button */
.submit-button {
  background-color: rgb(122, 128, 131);
  color: white;
  font-weight: bold;
  margin: 10px;
  width: 200px;
  border: 2px solid;
  border-color:  rgb(255, 153, 51);
  box-shadow: 0 8px 6px -6px #000000 ;
  margin-left: 70px;
  
}
/* input field */
.user-input {
  border: 2px solid;
  border-color: rgb(255, 153, 51);
  background-color: #ddd;
  border-radius: 5px;
  height: 50px;
  width: 90vw;
}
.message-container {
  height: 60vh; 
  overflow:   none;
  position:   relative;
}
.message-form-container {
   position: fixed;
   background-color: white;
   display: flex;
   align-items: center;
   justify-content: space-around;
   bottom: 1px;
    border-radius: 10px;
    text-align: center;
    height: 20vh;
    width: 100vw;
}