/* Banner Component */
.banner {
    color: white;
    text-align: center;
    height: 20vh;
    width: 100vw;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgb(122, 128, 131);
    position: fixed;
    margin-bottom: 10px;
    border-radius: 10px;
}

  .title {
    font-size: 30px;
    font-weight: bold;
    text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  }
  .teaser {
    font-size: 16px;
    font-weight: lighter;
    color: rgb(255, 255, 255);
    opacity: 0.6;
    margin-bottom: 30px;
  }
  .margin {
    margin-top: 20px;
  }
